---
interface Props {
  listTitle: string;
  listItems: {
    title: string;
    journal: string;
    time: string;
	link: string;
  }[];
}
const {listTitle, listItems} = Astro.props
listItems.sort((a, b) => new Date(b.time).getTime() - new Date(a.time).getTime());
---

<h2 class='text-3xl font-bold mb-8'>{listTitle}</h2>
		<div class='space-y-6'>
			{
				listItems.map(item => (
					<div class='p-6 rounded-lg text-base-content bg-base-200'>
						<h3 class='text-xl font-semibold mb-2'>
							<a href={item.link} target="_blank" class='hover:text-accent'>
								{item.title}
							</a>
						</h3>
						<p >
							{item.journal} â€¢ <time datetime={item.time} class='text-sm text-base-content/71'>
												{new Date(item.time).toLocaleDateString('en-GB', {
													year: 'numeric',
													month: 'long',
													// day: 'numeric',
												})}
											</time>
						</p>
					</div>
				))
			}
		</div>
